    <div class="container">
        <div  style="background-color: brown; color: cornsilk; margin-top:20px">
            <div style=" color: cornsilk; text-align: center;">
                <h1>The Rock Foundations School</h1>
                <h2>Fee Payment Form</h2>
            </div>
            <hr>
            <div class="fee">
                <form id="fees">
                    <div class="container">
                        <h6>Please ensure you fill the student details correct before you proceed to pay</h6>
                        <div id="din">
                            <label for="full name">Full Name:</label>
                            <input type="text" placeholder="Enter student/ward full name..." name="fullName" id="fullName" required>
                        </div>
                        <div id="din">
                            <label for="reg. Number">Registration Number:</label>
                            <input type="text" placeholder="Enter student/ward registration number..." name="regNumber" id="regNumber" required>
                        </div>
                        <div id="din">
                            <label for="email">Parent Email:</label>
                            <input type="text" placeholder="Enter parent email..." name="email" id="email" required>
                        </div>
                        <div id="din">
                            <label for="term">Term:</label>
                            <select name="term" id="term" required>
                                <option value="empty">Select term</option>
                                <option value="First term">First Term</option>
                                <option value="Second term">Second Term</option>
                                <option value="Third term">Third Term</option>
                            </select>
                        </div>
                        <div id="din">
                            <label for="class">Class:</label>
                            <select name="class" id="class" onchange="feeAmount()" required>
                                <option value="select your class">Select your class</option>
                         <option value="JSS 1">JSS 1</option>
                         <option value="JSS 2">JSS 2</option>
                         <option value="JSS 3">JSS 3</option>
                         <option value="SSS 1">SSS 1</option>
                         <option value="SSS 2">SSS 2</option>
                         <option value="SSS 3">SSS 3</option>
                    </select>
                        </div>

                        <div id="din">
                            <label for="parent name">Amount:</label>
                            <input type="text" name="amount" id="amount" required>
                        </div>
                        <hr>
                        <div id="din">

                            <button type="submit">Pay Fee</button>
                        </div>
                    </div>
                </form>
            </div>
